<div class="container rounded bg-light">
    <br class="mt-2">
    <div class="container mt-4 d-flex justify-content-center">
        <h2>Estabelecimentos cadastrados:</h2>
    </div>
    <hr>
    <div class="row">
        <div class="col-sm">
            {{#each postagens}}
                <div class="card mt-2">
                    <div class="card-body">
                        <h4>{{titulo}}</h4>
                        <p>Descrição{{descricao}}</p>
                        <small>Data: {{data}}</small><br>
                        <small>Categoria: {{categoria.nome}}</small><br>
                        <div class="row float-right">
                            <div class="col-sm"  style="padding: 0px; margin: 2px">
                                <a href="/usuario/estabelecimentos/edit/{{_id}}"><button class="btn btn-success btn-sm">Editar</button></a>
                            </div>
                            <div class="col-sm"  style="padding: 0px; margin: 2px">
                                <form action="/usuario/estabelecimentos/deletar" method="POST">
                                    <input type="hidden" name="id" value="{{_id}}">
                                    <button class="btn btn-danger btn-sm">Deletar</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            {{else}}
                <h4 class="mt-3 d-flex justify-content-center text-danger">Nenhum registro. ):</h4>
            {{/each}}
        </div>
    </div>
    <br class="mt-4">
</div>
<br class="mt-4">



