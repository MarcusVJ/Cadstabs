<div class="container rounded bg-light">
    <br class="mt-2">
    <div class="container mt-4 d-flex justify-content-center">
        <h2>Resultados de: <b><i>"{{categoria.nome}}"</i></b></h2>
    </div>
    <hr>
    <div class="container rounded bg-light">
        <div class="row">
            <div class="col-sm">
                {{#each estabelecimento}}
                    {{#if status}}
                    <div class="card mt-2">
                    {{else}}
                    <div class="card mt-2 bg-dark text-light">
                    {{/if}}
                    <div class="card-body">
                        <h4>{{razaoSocial}}</h4>
                        <p>Nome fantasia: {{nomeFantasia}}</p>
                        <small>CNPJ: {{cnpj}}</small><br>
                        <small>E-mail de contato: {{email}}</small><br>
                        <small>Endereco: {{endereco}}</small><br>
                        <small>Cidade: {{cidade}}</small><br>
                        <small>Estado: {{estado}}</small><br>
                        <small>Telefone: {{telefone}}</small><br>
                        <small>Categoria: {{categoria.nome}}</small><br>
                        <small >AgÃªncia: {{agencia}}</small><br>
                        <small>Conta: {{conta}}</small><br>
                        <div class="mt-2">
                            <small class="text-sm-left text-secondary" style="padding: 0px; margin: 2px">Data de Cadastro: {{dataCadastro}}</small>
                            <div class="row float-right">
                                <div class="col-sm"  style="padding: 0px; margin: 2px">
                                    <a href="/usuario/estabelecimentos/edit/{{_id}}"><button class="btn btn-success btn-sm">Editar</button></a>
                                </div>
                                {{#if status}}
                                    <div class="col-sm"  style="padding: 0px; margin: 2px">
                                        <form action="/usuario/estabelecimentos/inativarstatus" method="POST">
                                            <input type="hidden" name="id" value="{{_id}}">
                                            <button class="btn btn-warning btn-sm">Inativar</button>
                                        </form>
                                    </div>
                                {{else}}
                                    <div class="col-sm"  style="padding: 0px; margin: 2px">
                                        <form action="/usuario/estabelecimentos/ativarstatus" method="POST">
                                            <input type="hidden" name="id" value="{{_id}}">
                                            <button class="btn btn-warning btn-sm">Ativar</button>
                                        </form>
                                    </div>
                                {{/if}}
                                <div class="col-sm"  style="padding: 0px; margin: 2px">
                                    <form action="/usuario/estabelecimentos/deletar" method="POST">
                                        <input type="hidden" name="id" value="{{_id}}">
                                        <button class="btn btn-danger btn-sm">Deletar</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                {{else}}
                    <h4 class="mt-3 d-flex justify-content-center text-danger">Nenhum registro. ):</h4>
                {{/each}}
            </div>
            </div>
            <br class="mt-4">
        </div>
        <br class="mt-4">
    </div>
</div>
<br class="mt-4">