<div class="container bg-light rounded">
    <br class="mt-2">
    <div class="container mt-4 ">
        <h2>Nova Categoria:</h2>
    </div>
    <hr>
    <div class="card">
        <div class="card-body">
            <form action="/admin/categorias/nova" method="POST">
                <label for="nome">Nome: </label>
                <input type="text" id="nome" name="nome" placeholder="Nome da categoria" class="form-control" onkeyup="sync()" autocomplete="off">
                <label for="slug">Slug: </label>
                <input type="text" id="slug" name="slug" placeholder="Slug da categoria" class="form-control" readonly="readonly">
                <br>
                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-success">Salvar</button>
                </div>
            </form>
        </div>
    </div>
    <br class="mt-4">
</div>

<script>
    function sync()
    {
        n1 = document.getElementById('nome');
        n2 = document.getElementById('slug');
        n2.value = removeAcento(n1.value);
    }
    function removeAcento(text)
    {
        text = text.toLowerCase();
        text = text.replace(new RegExp('[ÁÀÂÃ]','gi'), 'a');
        text = text.replace(new RegExp('[ÉÈÊ]','gi'), 'e');
        text = text.replace(new RegExp('[ÍÌÎ]','gi'), 'i');
        text = text.replace(new RegExp('[ÓÒÔÕ]','gi'), 'o');
        text = text.replace(new RegExp('[ÚÙÛ]','gi'), 'u');
        text = text.replace(new RegExp('[Ç]','gi'), 'c');
        text = text.replace(new RegExp(/\s/g), '');
        return text;
    }
</script>
